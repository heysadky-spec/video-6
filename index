    // Optional: track clicks or add small delay/animation before redirect.
    // This prevents double navigation when user clicks button (CTA) or anywhere.
    (function(){
      const target = "TARGET_URL";
      const fullLink = document.getElementById('fullLink');
      const cta = document.querySelector('.cta');

      // Optional: prevent double-follow and add 80ms micro-delay for UX
      function go(e){
        e.preventDefault();
        // small visual/audio or analytics hook can go here
        window.location.href = target;
      }

      fullLink.addEventListener('click', go);
      cta.addEventListener('click', go);
